<div class="col-xs-8">

<h3>Create a Biz</h3>

	<form class="create-update-form" action="/biz" method="POST">
		<div class="form-group">
			<label for="name">Business Name:</label>
			<input type="text" id="name" name="biz_name"><br>
			<label for="desc">Description:</label>
			<input type="text" id="desc" name="biz_desc"><br>
			<label for="desc">image:</label>
			<input type="text" id="image" name="biz_image"><br>
			<label for="desc">Street Address:</label>
			<input type="text" id="street" name="biz_street"><br>
			<label for="city">City:</label>
			<input type="text" id="city" name="biz_city"><br>
			<label for="state">State:</label>
			<input type="text" id="state" name="biz_state"><br>
			<label for="desc">geo_lat:</label>
			<input type="text" id="lat" name="biz_lat"><br>
			<label for="desc">geo_long:</label>
			<input type="text" id="long" name="biz_long"><br>
			<label for="existingCat">Choose Category:</label>
			<select name="categories">
				<option value="null">Select a category</option>
				{{#each categories}}
							<option value={{this.id}}>{{this.cat_name}}</option>
				{{/each}}
			</select><br>
			<label for="newCat">New Category:</label>
			<input type="text" id="newCat" name="new_cat"><br>

			<button id="submit" type="submit">Submit</button>
		</div>
	</form>

</div>
