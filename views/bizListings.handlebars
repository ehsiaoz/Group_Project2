
<div class="col-xs-0 col-sm-1 col-md-2">

</div>

<div class="col-xs-12 col-sm-10 col-md-7 col-lg-5">

	<h1>Angie's List of Businesses</h1>

	<p>List of Businesses in the DB</p>


	<div id="Businesses">
		<h3>Businesses</h3>
		<div class="Businesses">
		{{#each businesses}}
			<div class="bizResult">
				<p class="bizName">{{this.biz_name}}</p>
				<p class="bizDesc">Description: {{this.biz_desc}}</p>
				<p class="bizCat">Category: {{this.biz_cat}}</p>
				<p class="bizimage">Image URL: {{this.biz_image}}</p>
				<p class="bizstreet">Address: {{this.biz_street}}</p>
				<p class="bizCity">City: {{this.biz_city}}</p>
				<p class="bizState">State: {{this.biz_state}}</p>
				<p class="bizLat">Geo Lat: {{this.biz_lat}}</p>
				<p class="bizLong">Geo Long: {{this.biz_long}}</p>
				<p class="bizCreateAt">Created At: {{this.createdAt}}</p>
				<p class="bizUpdateAt">Updated At: {{this.updatedAt}}</p>
			</div>
		{{/each}}
		</div>
	</div>

<h3>Create a Biz</h3>
<form class="create-update-form" action="/biz" method="POST">
	<div class="form-group has-success has-feedback">
		<label for="name">Business Name:</label>
		<input type="text" class="form-control" id="name" name="biz_name">
	</div>
	<div class="form-group has-success has-feedback">
		<label for="desc">Description:</label>
		<input type="text" class="form-control" id="desc" name="biz_desc">
	</div>
	<div class="form-group has-success has-feedback">
		<label for="desc">Category:</label>
		<input type="text" class="form-control" id="cat" name="biz_cat">
	</div>
	<div class="form-group has-success has-feedback">
		<label for="desc">image:</label>
		<input type="text" class="form-control" id="image" name="biz_image">
	</div>
	<div class="form-group has-success has-feedback">
		<label for="desc">Street Address:</label>
		<input type="text" class="form-control" id="street" name="biz_street">
	</div>
	<div class="form-group has-success has-feedback">
		<label for="city">City:</label>
		<input type="text" class="form-control" id="city" name="biz_city">
	</div>
	<div class="form-group has-success has-feedback">
		<label for="state">State:</label>
		<input type="text" class="form-control" id="state" name="biz_state">
	</div>
	<div class="form-group has-success has-feedback">
		<label for="desc">geo_lat:</label>
		<input type="text" class="form-control" id="lat" name="biz_lat">
	</div>
	<div class="form-group has-success has-feedback">
		<label for="desc">geo_long:</label>
		<input type="text" class="form-control" id="long" name="biz_long">
	</div>
	<button class="btn btn-success" id="submit" type="submit">Submit</button>
</form>

</div>
<div class="col-xs-0 col-sm-1 col-md-3 col-lg-5">

</div>
